@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>
<hr/>

<div>
    <div active="active" uib-tabset>
        <div uib-tab index="0" heading="Personal Information">
            <div ng-controller="UsersProfileController as ctrl" ng-init="ctrl.find('@ViewData["UserId"]')">
                <hr/>

                <form class="form-horizontal" name="ctrl.form" novalidate ng-submit="ctrl.save()">
                    @Html.AntiForgeryToken()

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label required">First Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" name="firstName" ng-model="ctrl.user.firstName" ng-maxlength="30" required class="form-control"/>
                                        <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.firstName.$error">
                                            <span ng-message="required">This field is required.</span>
                                            <span ng-message="maxlength">The field length is too large</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label required">Last Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" name="lastName" ng-model="ctrl.user.lastName" ng-maxlength="30" required class="form-control"/>
                                        <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.lastName.$error">
                                            <span ng-message="required">This field is required.</span>
                                            <span ng-message="maxlength">The field length is too large.</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label required">Email</label>
                                    <div class="col-sm-8">
                                        <input type="email" name="email" ng-model="ctrl.user.email" ng-maxlength="50" required class="form-control"/>
                                        <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.email.$error">
                                            <span ng-message="required">This field is required.</span>
                                            <span ng-message="email">This is not a valid email address.</span>
                                            <span ng-message="maxlength">The field length is too large.</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Phone number</label>
                                    <div class="col-sm-8">
                                        <input type="tel" name="phoneNumber" ng-model="ctrl.user.phoneNumber" class="form-control"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-4 col-sm-10">
                                        <input type="submit" class="btn btn-success" value="Save"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div uib-tab index="1" heading="Security">
            <div ng-controller="PasswordController as ctrl">
                <hr />

                <form class="form-horizontal" name="ctrl.form" novalidate ng-submit="ctrl.save()">
                    @Html.AntiForgeryToken()

                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label required">Old Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" name="oldPassword" ng-model="ctrl.user.oldPassword" required class="form-control" />
                                        <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.oldPassword.$error">
                                            <span ng-message="required">This field is required.</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label required">New Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" name="newPassword" required class="form-control"
                                               ng-model="ctrl.user.newPassword"
                                               ng-minlength="6"
                                               ng-maxlength="100" />
                                        <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.newPassword.$error">
                                            <span ng-message="required">This field is required.</span>
                                            <span ng-message="minlength">The field length is too small.</span>
                                            <span ng-message="maxlength">The field length is too large.</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label required">Confirm Password</label>
                                    <div class="col-sm-8">
                                        <input type="password" name="confirmPassword" required class="form-control"
                                               ng-model="ctrl.user.confirmPassword"
                                               ng-minlength="6"
                                               ng-maxlength="100" />
                                        <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.confirmPassword.$error">
                                            <span ng-message="required">This field is required.</span>
                                            <span ng-message="minlength">The field length is too small.</span>
                                            <span ng-message="maxlength">The field length is too large.</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-4 col-sm-10">
                                        <input type="submit" class="btn btn-success" value="Change password" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div uib-tab index="3" heading="Educations">I've got an HTML heading, and a select callback. Pretty cool!</div>
    </div>
</div>