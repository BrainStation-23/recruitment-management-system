@using RecruitmentManagementSystem.Model

@{
    ViewBag.Title = "Create Question";
}

<h3>Create New Question</h3>
<hr />

<div class="row">
    <div class="col-sm-7">
        <div ng-controller="QuestionsController as ctrl" ng-init="ctrl.findCategories()">

            <form name="ctrl.form" ng-submit="ctrl.create()" novalidate>

                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2">Text</label>
                        <div class="col-sm-10">
                            <textarea name="text" ng-model="ctrl.text" required class="form-control" rows="6"></textarea>
                            <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.text.$error">
                                <span ng-message="required">This field is required.</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Category</label>
                        <div class="col-sm-5">
                            <select name="category" class="form-control" ng-model="ctrl.categoryId" ng-options="option.id as option.name for option in ctrl.categories" required>
                                <option value="">Select Category</option>
                            </select>
                            <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.category.$error">
                                <span ng-message="required">This field is required.</span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            @Html.ActionLink("Create new category", "Create", "QuestionCategory")
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Additional Info</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="6" ng-model="ctrl.notes"></textarea>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-sm-2">Related Documents</label>
                        <div class="col-sm-5">
                            <input type="file" title="Select Document" ng-model="ctrl.documents" ngf-select accept=".pdf,.doc,.docx" multiple />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Question Type</label>
                        <div class="col-sm-4">
                            @Html.DropDownList("questionType", EnumHelper.GetSelectList(typeof(QuestionType)), "Select Type", new { @class = "form-control", ng_model = "ctrl.questionType", @required ="" })
                            <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.questionType.$error">
                                <span ng-message="required">This field is required.</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" ng-show="ctrl.questionType == ctrl.constants.questionType.descriptive">
                        <label class="control-label col-sm-2">Answer (Optional)</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="6" ng-model="ctrl.answer" placeholder="Write down your answer..."></textarea>
                        </div>
                    </div>

                    <div ng-show="ctrl.questionType == ctrl.constants.questionType.MCQ">

                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>
                                        Choice (You can select multiple choices as a valid choice)
                                    </th>
                                    <th>
                                        This is a valid choice?
                                    </th>
                                    <th></th>
                                </tr>
                                <tr ng-repeat="choice in ctrl.choices track by $index">
                                    <td>
                                        <input type="text" class="form-control" ng-model="choice.text" />
                                    </td>
                                    <td>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" ng-value="true" ng-model="choice.isValid" /> Correct answer
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger" ng-disabled="$index < 2" ng-click="ctrl.discardChoice($index)">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <button type="button" class="btn btn-primary" ng-click="ctrl.addNewChoice()">Add another choice</button>
                    </div>

                    <hr />

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>