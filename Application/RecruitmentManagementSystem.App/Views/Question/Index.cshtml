@model IEnumerable<RecruitmentManagementSystem.App.ViewModels.Question.QuestionViewModel>
@{
    ViewBag.Title = "Questions";
}

<h3>Questions</h3>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        <strong>Sorry!</strong>
        No questions are found.
    </div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

else
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.ActionLink(item.Category, "Details", "QuestionCategory", new {id = item.CategoryId}, null)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>
            </tr>
        }
    </table>
}