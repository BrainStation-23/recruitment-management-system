@model RecruitmentManagementSystem.App.ViewModels.Candidate.CandidateViewModel

@{
    ViewBag.Title = "Create New Candidate";
}

<h3>Create New Candidate</h3>
<hr/>

<div ng-controller="CandidatesController as ctrl" ng-init="ctrl.findInstitutions()">
    
    <form name="ctrl.form" ng-submit="ctrl.create()" novalidate>
        
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            
            <div class="form-group">
                <label class="control-label col-md-2">First Name</label>
                <div class="col-md-10">
                    <input name="firstName" ng-model="ctrl.firstName" ng-minlength="3" ng-maxlength="7" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.firstName.$error">
                        <span ng-message="required">This field is required.</span>
                        <span ng-message="minlength">This field is too short</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Last Name</label>
                <div class="col-md-10">
                    <input name="lastName" ng-model="ctrl.lastName" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.lastName.$error">
                        <span ng-message="required">This field is required.</span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-md-2">Email</label>
                <div class="col-md-10">
                    <input name="email" ng-model="ctrl.email" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.email.$error">
                        <span ng-message="required">This field is required.</span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-md-2">Phone Number</label>
                <div class="col-md-10">
                    <input name="phoneNumber" ng-model="ctrl.phoneNumber" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.phoneNumber.$error">
                        <span ng-message="required">This field is required.</span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-md-2">Others</label>
                <div class="col-md-10">
                    <textarea name="others" ng-model="ctrl.others" required class="form-control"></textarea>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.others.$error">
                        <span ng-message="required">This field is required.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Website</label>
                <div class="col-md-10">
                    <input name="website" ng-model="ctrl.website" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.website.$error">
                        <span ng-message="required">This field is required.</span>
                    </div>
                </div>
            </div>
            
            
