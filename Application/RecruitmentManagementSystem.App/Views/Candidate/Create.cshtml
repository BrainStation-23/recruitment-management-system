        <div class="modal-header">
            <h3 class="modal-title">Add education Field</h3>
        </div>

        <div class="modal-body">
            Degree <input type="text" class="form-control" ng-model="ctrl.educations.degree" /> 
            Field of Study <input type="text" class="form-control" ng-model="ctrl.educations.fieldOfStudy" />
            Grade <input type="text" class="form-control" ng-model="ctrl.educations.grade" />
            Activites <input type="text"  class="form-control" ng-model="ctrl.educations.activites" />
            Description <input type="text" class="form-control" ng-model="ctrl.educations.description" />
            First Year <input type="number" class="form-control" ng-model="ctrl.educations.firstYear" />
            Last Year <input type="number" class="form-control" ng-model="ctrl.educations.lastYear" />
            Institution
            <select name="institution" class="form-control" ng-model="ctrl.educations.institutionId" ng-options="option.Id as option.Name for option in ctrl.institutions" required>
                <option value="">Select Institution</option>
            </select>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ctrl.ok()">OK</button>
            <button class="btn btn-warning" type="button" ng-click="ctrl.cancel()">Cancel</button>
