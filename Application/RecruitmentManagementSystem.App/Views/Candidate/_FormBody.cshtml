<div class="form-horizontal">

    <div class="row">
        <div class="col-xs-12 col-md-10">

            <div class="form-group">
                <label class="control-label col-md-2 required">First Name</label>
                <div class="col-md-5">
                    <input type="text" name="firstName" ng-model="ctrl.candidate.firstName" ng-maxlength="30" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.firstName.$error">
                        <span ng-message="required">This field is required.</span>
                        <span ng-message="maxlength">This field is too large</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 required">Last Name</label>
                <div class="col-md-5">
                    <input type="text" name="lastName" ng-model="ctrl.candidate.lastName" ng-maxlength="30" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.lastName.$error">
                        <span ng-message="required">This field is required.</span>
                        <span ng-message="maxlength">This field length is too large.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 required">Email</label>
                <div class="col-md-5">
                    <input type="email" name="email" ng-model="ctrl.candidate.email" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.email.$error">
                        <span ng-message="required">This field is required.</span>
                        <span ng-message="email">This is not a valid email address.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 required">Phone Number</label>
                <div class="col-md-5">
                    <input type="tel" name="phoneNumber" ng-model="ctrl.candidate.phoneNumber" ng-pattern="/^\(?(\d{5})\)?[ .-]?(\d{6})$/" required class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.phoneNumber.$error">
                        <span ng-message="required">This field is required.</span>
                        <span ng-message="pattern">This is not a valid phone number.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Others</label>
                <div class="col-md-5">
                    <textarea name="others" ng-model="ctrl.candidate.others" class="form-control" rows="6" ng-maxlength="3000"></textarea>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.others.$error">
                        <span ng-message="maxlength">This field length is too large.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Website</label>
                <div class="col-md-5">
                    <input type="url" name="website" ng-model="ctrl.candidate.website" ng-maxlength="50" class="form-control"/>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.website.$error">
                        <span ng-message="maxlength">This field length is too large.</span>
                        <span ng-message="url">This is not a valid url.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 required">Job Position</label>
                <div class="col-md-5">
                    <select name="jobPosition" class="form-control" ng-model="ctrl.candidate.jobPositionId" ng-options="option.id as option.name for option in ctrl.positions" required>
                        <option value="">Select One</option>
                    </select>
                    <div class="text-danger field-validation-error" ng-messages="ctrl.form.submitted && ctrl.form.jobPosition.$error">
                        <span ng-message="required">This field is required.</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Resume</label>
                <div class="col-md-5">
                    <input type="file" title="Select Resume" ng-model="ctrl.candidate.resume" ngf-select accept=".pdf,.doc,.docx"/>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-2">
            <img src="~/Content/Images/default-avatar.jpg" ng-src="{{ ctrl.candidate.avatar.relativePath }}" alt="default avatar" class="img-thumbnail" style="height: 155px; width: 155px;">
            <input type="file" title="Select Photo" accept="image/*" ngf-fix-orientation="false" ngf-select="ctrl.renderAvatarPreview($file)" />
        </div>
    </div>

    @Html.Partial("_Education")

    @Html.Partial("_Experience")

    @Html.Partial("_Project")

    @Html.Partial("_Skill")

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save Candidate" class="btn btn-success" />
        </div>
    </div>
</div>