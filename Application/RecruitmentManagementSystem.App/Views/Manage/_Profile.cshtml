@model RecruitmentManagementSystem.App.ViewModels.Account.IndexViewModel

<h3>Account Details</h3>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>
            @Model.ApplicationUser.FirstName
        </dd>
        <dt>Last Name:</dt>
        <dd>
            @Model.ApplicationUser.LastName
        </dd>
        <dt>Email:</dt>
        <dd>
            @Model.ApplicationUser.Email
        </dd>
        <dt>Phone Number:</dt>
        <dd>
            @Model.ApplicationUser.PhoneNumber
        </dd>
        <dd>
            <img src="@Model.ApplicationUser.Avatar.RelativePath" class="img-thumbnail" alt="Avatar" />
        </dd>
    </dl>

    @Html.ActionLink("Edit", "EditProfile", "Manage")
</div>